@using BookStore.Domain.Entities
@model List<Author>

<form method="get" action="@Url.Action("Index", "Authors")">
    <div class="input-group mb-3">
        <input type="text" name="searchString" class="form-control" placeholder="Search authors..." aria-label="Search authors">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
</form>
<br />
<a asp-controller="Authors" asp-action="Create" class="btn btn-primary" >
    <i class='bx bx-plus'></i>
</a>


<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var rowNumber = i + 1;
            <tr>
                <th scope="row">@rowNumber</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Description</td>
                <td>
                    <a asp-controller="Authors" asp-action="DeleteAuthor" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>

                    <a asp-controller="Authors" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-secondary">
                        <i class='bx bxs-edit-alt'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
