@using BookStore.Domain.Entities;
@model List<Genre> 

@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="Genres" asp-action="Create" class="btn btn-primary">
        <i class='bx bx-plus'></i>
    </a>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">T/R</th>
            <th scope="col">Name</th>
            @if (User.Identity.IsAuthenticated)
            {
                <th scope="col">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            int list_cnt = i+1;
            <tr>
                <th>@list_cnt</th>
                <td>@Model[i].Name</td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-controller="Genres" asp-action="DeleteGenre" asp-route-id="@Model[i].Id" class="btn btn-danger">
                            <i class='bx bxs-trash'></i>
                        </a>
                        <a asp-controller="Genres" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-secondary">
                            <i class='bx bxs-edit-alt'></i>
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>