@using BookStore.Domain.Entities;
@model List<Genre> 

<a asp-controller="Genres" asp-action="Create" class="btn btn-primary">
    <i class='bx bx-plus'></i>
</a>

<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            int list_cnt = i+1;
            <tr>
                <th>@list_cnt</th>
                <td>@Model[i].Name</td>
                <td>
                    <a asp-controller="Genres" asp-action="DeleteGenre" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>
                    <a asp-controller="Genres" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-warning">
                        <i class='bx bxs-pencil'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>